{% extends 'base.html.j2'%}
{% block title %}
Login
{% endblock %}
{% block content %}

    <div style="margin-top: 10%; height:65vh;">
    <div class="vertical_container container h-100 d-flex justify-content-center">
        <form action="{{url_for('auth.login')}}" method="POST">
            {{ form.hidden_tag() }}
                    <div class="mb-4">
                        <h1>Login</h1>
                    </div>
                    <div>
                        {{form.email.label(class="form-label")}}
                        {{form.email(class="form-control")}}
                        {% for error in form.email.errors %}
                            <small style="color:red;">{{error}}</small>
                        {% endfor %}
                    </div>
                    <br>
                    <div>
                        {{form.password.label(class="form-label")}}
                        {{form.password(class="form-control")}}
                        {% for error in form.password.errors %}
                            <small style="color:red;">{{error}}</small>
                        {% endfor %}
                    </div>
                    <div>
                        {{form.submit(class="btn btn-info form-control mt-4")}}
                    </div>
                        <small style="color:red;">{{error}}</small>
                    <div style="margin-top:5%;">
                        <div class="container-fluid d-flex justify-content-center">
                            <a href="{{url_for('auth.register')}}" style="">New Customer? Please Register Here.</a>
                        </div>
                    </div>

        </form>
    </div>
    </div>
{% endblock %}